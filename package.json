{
  "name": "uphold-mcp-server",
  "version": "1.0.0",
  "description": "MCP server exposing Uphold's public cryptocurrency APIs as tools",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "uphold-mcp-server": "dist/server.js"
  },
  "scripts": {
    "build": "esbuild src/server.ts --bundle --platform=node --target=node24 --outfile=dist/server.js --format=esm --packages=external",
    "dev": "tsx src/server.ts",
    "prepublishOnly": "npm run build",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "uphold",
    "cryptocurrency",
    "exchange",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "@vitest/ui": "^4.0.18",
    "dotenv": "^17.2.3",
    "esbuild": "^0.24.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=24.12.0"
  }
}
